<h1>Search results</h1>

<ul class="results">
  <% if @professors == nil %>
    <h2>Please enter something in the search bar</h2>
  <% else @professors.each do |professor| %>
    <li>
      <%= link_to professor.first_name + " " + professor.last_name, professor %>, 
      <%= professor.netid %>, 
      <%= professor.department %>
      (<%= professor.num_rev%> reviews)
      <% if session[:cas_user] == "cxduan" %>
        &nbsp;
        Added <%= time_ago_in_words(professor.created_at) %> ago.
      <% end %>
    </li>
  <% end %>
  <% end %>
  <br>
  <%= link_to "Add an advisor", new_professor_path, class: "btn btn-custom" %>
</ul>
