<% provide(:title, "Add") %>
<br>
<h1>Add an advisor</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@professor) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="required_fields" align="right">* Required Fields</div>  

      <%= f.label :first_name, "First Name" %><font color="red">*</font>
      <%= f.text_field :first_name, class: 'form-control' %>

      <%= f.label :last_name, "Last Name" %><font color="red">*</font>
      <%= f.text_field :last_name, class: 'form-control' %>

      <%= f.label :netid, "NetID" %><font color="red">*</font>
      <%= f.text_field :netid, class: 'form-control' %>

      <%= f.label :department, "Department" %><font color="red">*</font>
      <%= f.text_field :department, class: 'form-control' %>

      <%= f.submit "Add advisor", class: "btn btn-custom" %>
    <% end %>
  </div>
</div>
