<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @professor.first_name %> <%= @professor.last_name %>, 
	<%= @professor.department %>
	<p>
	  <%= @professor.netid %>@princeton.edu
	</p>   
      </h1>
    </section>
  </aside>

  <div class="col-md-8">
    <% if @professor.reviews.any? %>
      <h3>Average Availability (<%= @professor.avg_avail %>)</h3>
      <h3>Average Responsiveness (<%= @professor.avg_resp %>)</h3>
      <h3>Average Knowledge (<%= @professor.avg_know %>)</h3>
      <h3>Average Organization (<%= @professor.avg_org %>)</h3>
      <h3>Average Friendliness (<%= @professor.avg_friend %>)</h3>
      <h3>Average Helpfulness (<%= @professor.avg_help %>)</h3>
      <h3>Comments (<%= @professor.reviews.count %>)</h3>
      <ul class="reviews">
        <%= render @reviews %>
      </ul>
      <%= will_paginate @reviews %>
    <% end %>
  </div>

</div>
