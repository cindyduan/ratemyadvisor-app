<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "RateMyAdvisor", root_path, id: "logo" %>
    
      <%= form_tag professors_path, class: "form-inline", method: :get do %>
      <div class="input-group input-group-lg" >
	       <% if params[:query].present? %>
	         <div class="input-group-btn">
	           <%= link_to "clear", professors_path, class: "btn btn-default" %>
	         </div>
	       <% end %>
	       <%= text_field_tag :query, params[:query], class: "form-control", id: "professor_search", autocomplete: "off" %>
	       <div class="input-group-btn">
	         <%= submit_tag "Search", class: "btn btn-custom" %>
	       </div>

         <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path, id: "home_button"%></li>
        <li><%= link_to "About", about_path, id: "about_button"%></li>
  <li><%= link_to "Find an advisor", find_path, id: "find_button"%></li>
  <li><%= link_to "Rate an advisor", new_review_path, id: "rate_button"%></li>
        <li><%= link_to "Log out", logout_path, id: "logout_button"%></li>
      </ul>
    </nav>
	     <% end %>
      </div>
  </div>
</header>
